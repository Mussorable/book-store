<%- include('modules/head'); %><%- include('modules/header'); %>
<html>
  <!-- <body> -->
    <!-- <div class="container"> -->
      <div class="products-container">
        <% products.forEach(item => { %>
            <div class="product">
                <h3 class="product-title"><%= item.title %></h3>
                <img class="product-image" src="<%= item.imageUrl %>" alt="<%= item.title %> front image">
                <p class="product-author"><%= item.author %></p>
                <p class="product-price">$<%= item.price %></p>
                <div class="product-buttons-wrapper">
                  <a class="btn" href="/product/details/<%= item._id %>">Details</a>
                  <a class="btn" href="/product/cart/<%= item._id %>">Add to Cart</a>
                </div>
            </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
